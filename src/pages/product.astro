---
import "../../assets/scss/astro-ecommerce.scss";

import data from "../../public/data.json";
import Navbar from "../components/navbar";
import CardProduct from "../components/products/cardProduct";
import ProductOverviewGrid from "../components/products/productOverviewGrid";
import ReviewSummaryChart from "../components/reviews/reviewSummaryChart";
import StoreDoubleColumn from "../components/store/storeDoubleColumn";
import Layout from "../layouts/Layout.astro";

// filter reviews with ID 01
let productReviews = data.reviews.filter((x) => x.productID == "01");

let firstProduct = data.products.pop();
---

<Layout title="Product Page" >
	<main>
		<Navbar />
		<div class="container mt-5">
			{firstProduct && <ProductOverviewGrid
				images={firstProduct.images}
				title={firstProduct.title}
				full_description={firstProduct.full_description}
				price={firstProduct.price}
				highlights={firstProduct.highlights}
				details={firstProduct.details}
				rating={firstProduct.rating}
				reviews={firstProduct.reviews}
				sizes={firstProduct.sizes}
			/>}

			<div class="my-5">
				<ReviewSummaryChart reviews={productReviews} />
			</div>

			<div class="row">
				<h5 class="mb-4">Customers also purchased</h5>
				{
					data.products.map((product) => (
						<div class="col-md-6 col-lg-3">
							<CardProduct
								thumb_src={product.thumb_src}
								thumb_alt={product.thumb_alt}
								color={product.color}
								title={product.title}
								price={product.price}
								position="left"
								description="prroduct description"
								colors={product.colors}
							/>
						</div>
					))
				}
			</div>
			<hr class="dark horizontal my-5" />
			<StoreDoubleColumn />
		</div>
	</main>
</Layout>
